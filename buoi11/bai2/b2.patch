&gpio0 {
	gpio-controller;
	#gpio-cells = <2>;
	interrupt-controller;
	#interrupt-cells = <2>;
	status = "okay";
};
/ {
	foo_device {
		compatible = "gpio-on-of-led";
		led-gpios = <&gpio0 30 GPIO_ACTIVE_HIGH>;	/** gpio0_30 */
		interrupt-parent = <&gpio0>;
		interrupts = <31 IRQ_TYPE_EDGE_FALLING>;
		button-gpios = <&gpio0 31 GPIO_ACTIVE_HIGH>;
		status = "okay";
	}; 
};